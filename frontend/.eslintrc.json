{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "serviceworker": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-undef": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-case-declarations": "off",
    "no-useless-escape": "off",
    "prefer-const": "off"
  },
  "ignorePatterns": [
    "public/",
    "vite.config.js",
    "vite.config.ts",
    "**/*.d.ts",
    "dist/"
  ]
}
